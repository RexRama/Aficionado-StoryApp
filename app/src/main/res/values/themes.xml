<resources>
    <!-- Base application theme. -->
    <style name="Theme.Aficionado" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/maroon</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maroon</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/maroon</item>
        <item name="android:navigationBarColor">@color/maroon</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Card.theme" parent="Widget.Material3.CardView.Elevated">
        <item name="android:backgroundTint">@color/cream</item>
        <item name="android:textColor">@color/darkest</item>
    </style>

    <style name="Button.theme" parent="Theme.Aficionado">
        <item name="android:backgroundTint">@color/maroon</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>

    <style name="Theme.Aficionado.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Aficionado.AppWidgetContainer" parent="Theme.Aficionado.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

    <style name="Theme.Aficionado.Fullscreen" parent="Theme.Aficionado">
        <item name="android:actionBarStyle">@style/Widget.Theme.Aficionado.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Aficionado.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>