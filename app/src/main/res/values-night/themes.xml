<resources>
    <!-- Base application theme. -->
    <style name="Theme.Aficionado" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/darkest</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maroon</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/maroon</item>
        <item name="android:navigationBarColor">@color/maroon</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Card.theme" parent="Widget.Material3.CardView.Elevated">
        <item name="android:backgroundTint">@color/dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.theme" parent="Theme.Aficionado">
        <item name="android:backgroundTint">@color/maroon</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>

    <style name="ThemeOverlay.Aficionado.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>


</resources>

